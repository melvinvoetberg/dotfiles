#!/bin/bash

# Set Sublime Text as default application
duti -s com.sublimetext.4 .css all
duti -s com.sublimetext.4 .erb all
duti -s com.sublimetext.4 .go all
duti -s com.sublimetext.4 .js all
duti -s com.sublimetext.4 .json all
duti -s com.sublimetext.4 .md all
duti -s com.sublimetext.4 .rb all
duti -s com.sublimetext.4 .ru all
duti -s com.sublimetext.4 .sh all
duti -s com.sublimetext.4 .yml all
duti -s com.sublimetext.4 .yaml all
duti -s com.sublimetext.4 .xml all


# Set VLC as default application
duti -s org.videolan.vlc .avi all
duti -s org.videolan.vlc .mkv all
duti -s org.videolan.vlc .mp4 all
duti -s org.videolan.vlc .webm all

# Disable Spotlight Shortcut
echo "Disabling Spotlight Shortcut"
/usr/libexec/PlistBuddy ~/Library/Preferences/com.apple.symbolichotkeys.plist \
  -c "Delete :AppleSymbolicHotKeys:64" \
  -c "Add :AppleSymbolicHotKeys:64:enabled bool false" \
  -c "Add :AppleSymbolicHotKeys:64:value:parameters array" \
  -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 65535" \
  -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 49" \
  -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 1048576" \
  -c "Add :AppleSymbolicHotKeys:64:type string standard"
